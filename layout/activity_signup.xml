<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#30ff"
    android:layout_marginBottom="3dp"
    tools:context=".signup">


    <ImageView
        android:layout_width="52dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/wall2"
        tools:context=".MainActivity" />

    <TextView
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="-90dp"
        android:text="BHARAT GAS BOOKING"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="Sign UP"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"

                android:drawableLeft="@drawable/baseline_man_24"
                android:drawablePadding="8dp"
                android:background="#30ff"
                android:hint="Consumer Name:"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/date_text"
                android:background="#30ff"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Consumer DOB:"
                android:drawableLeft="@drawable/baseline_date_range_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

    <EditText
        android:id="@+id/signup_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#30ff"
        android:drawableLeft="@drawable/baseline_edit_location_24"
        android:drawablePadding="8dp"
        android:hint="Address:"
        android:padding="8dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/signup_mobnum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#30ff"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="8dp"
        android:hint="Mobile Number:"
        android:padding="8dp"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:text="SIGN UP" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginredirect"
                android:text="Already an user? Login"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

</LinearLayout>



